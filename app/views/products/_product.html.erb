<div id="<%= dom_id product %>">
  <p>
    <strong>Name:</strong>
    <%= product.name %>
  </p>

  <p>
    <strong>Price:</strong>
    <%= number_to_currency(product.price) %>
  </p>

  <p>
    <strong>Sales Count:</strong>
    <%= product.sales_count %>
  </p>

  <th>PAYMENT</th>
  <%= button_to "Buy now!", checkout_create_path, params: {id: product.id}, remote: true, data: {turbo: false} %>

</div>
